{
  "private": true,
  "name": "dartsmate",
  "productName": "DartsMate",
  "description": "Analyze, track and compare your dart games.",
  "version": "0.2.0",
  "author": "DartsMate Contributors",
  "main": "app/background.js",
  "repository": "https://github.com/derechtenap/dartsmate",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:all": "nextron build --all",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "build:mac": "nextron build --mac --x64",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-serve": "^1.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@mantine/core": "^7.5.1",
    "@mantine/form": "^7.5.1",
    "@mantine/hooks": "^7.5.1",
    "@mantine/notifications": "^7.5.1",
    "@next/eslint-plugin-next": "^13.5.6",
    "@tabler/icons-react": "^2.47.0",
    "@tanstack/eslint-plugin-query": "^4.36.1",
    "@tanstack/react-query": "^4.33.0",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-avatar-editor": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.16",
    "electron": "^21.4.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "filesize": "^10.1.0",
    "next": "^12.3.4",
    "next-i18next": "^15.2.0",
    "nextron": "^8.13.0",
    "prettier": "2.8.8",
    "react": "^18.2.0",
    "react-avatar-editor": "^13.0.1",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5"
  }
}
