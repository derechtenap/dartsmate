    "eslint-plugin-prettier": "^4.2.1",
    "next": "^14.2.20",
    "next-i18next": "^15.4.0",
    "nextron": "^9.4.0",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "2.8.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
