    "@mantine/form": "^7.15.0",
    "@mantine/hooks": "^7.15.0",
    "@mantine/modals": "^7.15.0",
    "@mantine/notifications": "^7.15.0",
    "@next/eslint-plugin-next": "^14.2.20",
    "@tabler/icons-react": "^3.24.0",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
