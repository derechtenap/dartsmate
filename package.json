    "@mantine/notifications": "^7.11.0",
    "@next/eslint-plugin-next": "^13.5.6",
    "@tabler/icons-react": "^2.44.0",
    "@tanstack/eslint-plugin-query": "^4.36.1",
    "@tanstack/react-query": "^4.33.0",
